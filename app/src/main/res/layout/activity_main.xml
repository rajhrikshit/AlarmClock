<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#455A64"
    android:id="@+id/relMain">

    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/timepicker"
        android:timePickerMode="spinner"
        android:layout_marginTop="350dp"
        android:scaleX="1"/>

    <include
        layout="@layout/toolbar_main_layout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#18FFFF"
        android:id="@+id/labeltv"
        android:text="Set Reminder Label "
        android:textColor="#000000"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#18FFFF"
        android:id="@+id/ringtoneshower"
        android:text="          Ringtone          "
        android:textColor="#000000"
        android:layout_below="@id/labeltv"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#455A64"
        android:id="@+id/label"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@id/labeltv"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:hint="No Label"
        android:textColor="#000000"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label"
        android:layout_toRightOf="@id/ringtoneshower"
        android:background="#455A64"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp">
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
        android:id="@+id/spinner_ringtone" />
        </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#18FFFF"
        android:id="@+id/offMethod"
        android:layout_below="@id/ringtoneshower"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:text="Alarm Off Method"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/offMethod"
        android:text="Repeat"
        android:layout_margin="5dp"
        android:background="#18FFFF"
        android:textColor="#000000"
        android:id="@+id/btRep"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btRep"
        android:layout_marginLeft="25dp"
        android:hint="S"
        android:id="@+id/sun"
        android:textColorHint="#FFFFFF"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btRep"
        android:layout_toRightOf="@id/sun"
        android:layout_marginLeft="5dp"
        android:hint="M"
        android:id="@+id/mon"
        android:textColorHint="#FFFFFF"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btRep"
        android:layout_toRightOf="@id/mon"
        android:layout_marginLeft="5dp"
        android:hint="T"
        android:id="@+id/tue"
        android:textColorHint="#FFFFFF"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btRep"
        android:layout_toRightOf="@id/tue"
        android:layout_marginLeft="5dp"
        android:hint="W"
        android:id="@+id/wed"
        android:textColorHint="#FFFFFF"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btRep"
        android:layout_toRightOf="@id/wed"
        android:layout_marginLeft="5dp"
        android:hint="T"
        android:id="@+id/thu"
        android:textColorHint="#FFFFFF"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btRep"
        android:layout_toRightOf="@id/thu"
        android:layout_marginLeft="5dp"
        android:hint="F"
        android:id="@+id/fri"
        android:textColorHint="#FFFFFF"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btRep"
        android:layout_toRightOf="@id/fri"
        android:layout_marginLeft="5dp"
        android:hint="S"
        android:id="@+id/sat"
        android:textColorHint="#FFFFFF"/>

</RelativeLayout>